                }
            });
        }

        function createAccordionItem(questionId, question, answer) {
            var item = '';
            item += '<div class="accordion accordian-style2">';
            item += '<div class="accordion-item">';
            item += '<h2 class="accordion-header">';
            item += '<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#' + questionId + '" aria-expanded="false" aria-controls="' + questionId + '">';
            item += question;
            item += '</button>';
            item += '</h2>';
            item += '<div id="' + questionId + '" class="accordion-collapse collapse" aria-labelledby="' + questionId + '" data-bs-parent="#accordionExample1">';
            item += '<div class="accordion-body">' + answer + '</div>';
            item += '</div>';
            item += '</div>';
            item += '</div>';

            return item;
        }

        // Function to get the value of a query parameter by name from the URL
        function getParameterByName(name) {
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(window.location.href);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }

        // Bind search function to search button click event
        $(document).on('click', '#searchButton', function () {
            performSearch();
        });

        // Function to perform search
        function performSearch() {
            var searchTerm = $('#searchInput').val().toLowerCase();
            $('.accordion').hide(); // Hide all accordion items

            $('.accordion').each(function () {
                var question = $(this).find('.accordion-button').text().toLowerCase();
                if (question.includes(searchTerm) || searchTerm === '') {
                    $(this).show(); // Show matching accordion items or all items when search term is empty
                }
            });
        }

        // Bind search function to input keyup event
        $(document).on('keyup', '#searchInput', function () {
            performSearch();
        });
    });

</script>
