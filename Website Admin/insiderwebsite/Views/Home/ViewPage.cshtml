     function getSectionlist() {
        $.ajax({
            url: "@apiUrl/api/Image/GetWebsitepagesListbyCategoryId/" + categoryId,
            type: "GET",
            success: function (data) {
                var x = '';
                for (var i = 0; i < data.data.length; i++) {
                        var header = data.data[i]['websitePages'];

                    x += '<section class="section spdtb"><div class="container"><div class="row flex-align-c">';

                    if (i % 2 === 0) {
                        x += '<div class="col-lg-6"><div class="heading mb32">';
                        x += '<h2 id="header-' + i + '" class="heading-title size-xl">' + header + '</h2>';

                        if (data.data[i]['largecontent']) {
                            x += '<div class="content" style="display: none;">' + data.data[i]['largecontent'] + '</div>';
                            x += '<a class="show-btn">Read More</a>';
                        }
                        x += '</div></div>';
                        x += '<div class="col-lg-6"> <img class="wow animate__fadeInLeft" src="@ImageUrl' + data.data[i]['imageUpload'] + '" alt="Image"></div>';
                    } else {
                        x += '<div class="col-lg-6"> <img class="wow animate__fadeInRight" src="@ImageUrl' + data.data[i]['imageUpload'] + '" alt="Image"></div>';
                        x += '<div class="col-lg-6"><div class="heading mb32">';
                        x += '<h2 class="heading-title size-xl">' + header + '</h2>';

                        if (data.data[i]['largecontent']) {
                            x += '<div class="content" style="display: none;">' + data.data[i]['largecontent'] + '</div>';
                            x += '<a class="show-btn">Read More</a>';
                        }
                        x += '</div></div>';
                    }
                    x += '</div></div></section>';
                }
                $('#sectionview').html(x);

                addReadMoreEventListener();
            },
            error: function (err) {
                console.log(err);
            }
        });
    }


    function addReadMoreEventListener() {
        $(document).on('click', '.show-btn', function () {
            var $content = $(this).prev('.content');
            var $header = $(this).closest('.heading').find('.heading-title.size-xl');

            $content.slideToggle('fast', function () {
                if ($content.is(':visible')) {
                    $header.addClass('hide-header');
                } else {
                    $header.removeClass('hide-header');
                }
            });

            $(this).text(function (index, text) {
                return text.trim() === 'Read More' ? 'Read Less' : 'Read More';
            });
        });
    }

    function truncateText(text, maxLines) {
        var lineHeight = 20; // Adjust this value based on your font size and line height
        var maxHeight = maxLines * lineHeight;

        var tempElem = document.createElement('div');
        tempElem.style.position = 'absolute';
        tempElem.style.visibility = 'hidden';
        tempElem.style.height = 'auto';
        tempElem.style.width = '300px'; // Adjust this value based on your container width
        tempElem.style.overflow = 'hidden';
        tempElem.style.lineHeight = lineHeight + 'px'; // Set the line height explicitly

        var spanElem = document.createElement('span');
        spanElem.style.display = 'inline'; // Ensure inline display for accurate line calculation
        spanElem.innerHTML = text;
        tempElem.appendChild(spanElem);

        document.body.appendChild(tempElem);

        var lines = tempElem.clientHeight / lineHeight;
        var truncatedText = text;

        if (lines > maxLines) {
            while (lines > maxLines) {
                truncatedText = truncatedText.slice(0, -1);
                spanElem.innerHTML = truncatedText;
                lines = tempElem.clientHeight / lineHeight;
            }
            truncatedText += '...';
        }

        document.body.removeChild(tempElem);

        return truncatedText;
    }



    function isOverflow(content, maxLines) {
        var lineHeight = 20;
        var maxHeight = maxLines * lineHeight;
        var tempElem = document.createElement('div');
        tempElem.style.position = 'absolute';
        tempElem.style.visibility = 'hidden';
        tempElem.style.height = 'auto';
        tempElem.style.width = '300px';
        tempElem.style.overflow = 'hidden';
